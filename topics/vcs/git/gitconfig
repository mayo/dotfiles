[core]
  excludesfile=~/.gitignore
[user]
  name = Mayo Jordanov
  email = mayo.jordanov@twocubed.com
[alias]
  ci = commit
  st = status
  co = checkout
  up = pull --rebase
[color]
  ui = auto
[push]
  default = simple
[diff]
  tool = gvimdiff
[merge]
  tool = fugitive
[mergetool]
  keepBackup = true

[difftool "gvimdiff"]
  cmd = gvim -f -d \"$LOCAL\" \"$REMOTE\"
[mergetool "fugitive"]
  cmd = gvim -f -c \"Gdiff\" \"$MERGED\"
